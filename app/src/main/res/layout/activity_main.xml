<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <EditText
       android:id="@+id/txt_area"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:hint="Enter Location Name here..."
       android:layout_centerHorizontal="true"
       android:layout_marginTop="170dp"/>
    <TextView
        android:id="@+id/txt_latlong"
        android:layout_below="@id/txt_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Location Co-ordinates..."
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/btn_poi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save poi"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt_latlong"
        android:layout_marginTop="15dp"/>
</RelativeLayout>